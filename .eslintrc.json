{
  "extends": ["athom/homey-app", "plugin:prettier/recommended", "plugin:import/recommended", "plugin:import/typescript"],
  "plugins": ["@typescript-eslint", "import"],
  "rules": {
    "node/no-missing-import": "off",
    "import/no-unresolved": "error",
    "prettier/prettier": "warn",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ]
  }
